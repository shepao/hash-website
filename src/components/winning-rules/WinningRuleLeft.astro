---

import Fragment from "./Fragment.astro";
import {leftData} from "./ruleData";
const {title,leftDataList} = Astro.props as {title:string,leftDataList:leftData[]}
---

<div class="w-full md:w-1/2 lg:w-1/2 xl:w-1/2 flex flex-col justify-between items-center gap-5">
    <span class="text-2xl bg-clip-text text-transparent bg-gradient-to-r from-pink-500 to-violet-500">{title}</span>
    {
        leftDataList.map(value => (
                <Fragment data={value}/>
        ))
    }
</div>
